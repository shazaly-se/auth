@model HomeDetailsViewModel

@{

    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "car.jpeg");
}
<h3>@Model.PageTitle</h3>

<div class="col-md-8">
    <div class="card" style="width: 50rem;">
        <img src="@photoPath" class="card-img-top" asp-append-version="true" alt="image">
        <div class="card-body">
            <h5 class="card-title">@Model.Employee.Name</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back</a>
            <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Employee.Id" class="btn btn-warning">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}